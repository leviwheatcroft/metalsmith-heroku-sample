<div class="col-md-2">
  {{#each tags}}
    <div class="post-preview">
      <a href=/tags/{{ this.urlSafe }}>
        <h2 class="post-title">
          {{@key}}
         </h2>
       </a>
      {{#if this.count}}
        <p class="post-meta">{{this.count}} articles</p>
      {{/if}}
    </div>
  {{/each}}
</div>
